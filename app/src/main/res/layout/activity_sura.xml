<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Learn.SuraActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="সূরা ফাতিহা"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageSwitcher
                android:id="@+id/suraimageSwither"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000"
                android:scaleX=".8"
                android:scaleY=".8" />


        </LinearLayout>

        <TextSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/presetTextSwitcher"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/userVoiceTV"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="#C2BBBB"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:textSize="30dp" />

        <ImageSwitcher
            android:id="@+id/imageSwitcherBanglaUccharon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="#C2BBBB"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textSize="30dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:orientation="horizontal">

        <ImageSwitcher
            android:id="@+id/imageSwitcherBanglaOrtho"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="#C2BBBB"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="30dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_height="10dp"
        android:id="@+id/suraSeekBar"/>

    <View
        android:layout_width="match_parent"
        android:background="#052DF5"
        android:layout_margin="5dp"
        android:layout_height="10dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/book11"
      android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

          <ImageButton
              android:layout_width="100dp"
              android:layout_height="80dp"
              android:padding="50dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/ic_skip_previous_black_24dp"
              android:id="@+id/surapreviousBtn"/>





          <ImageButton
              android:layout_width="100dp"
              android:layout_height="80dp"
              android:id="@+id/surareplayBtn"
              android:layout_margin="10dp"
              android:background="@drawable/ic_repeat_one_black_24dp"/>


          <ImageButton
              android:id="@+id/suranextBtn"
              android:layout_width="100dp"
              android:layout_height="79dp"
              android:layout_marginLeft="30dp"
              android:background="@drawable/ic_skip_next_black_24dp" />


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="horizontal">

          <ImageButton
              android:id="@+id/suramicBtn"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginRight="25dp"
              android:background="@drawable/ic_mic_none_black_24dp"
              android:layout_gravity="center"/>

          <ImageButton
              android:id="@+id/suracompareBtn"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginLeft="25dp"
              android:background="@drawable/ic_compare_arrows_black_24dp"
              android:layout_gravity="center"/>
      </LinearLayout>
  </LinearLayout>




</LinearLayout>