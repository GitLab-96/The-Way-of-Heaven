<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defoultColor"
    android:orientation="vertical"
    android:weightSum="30"
    tools:context=".Learn.HorkotExam">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Practice Exam : 20"
        android:textSize="@dimen/_20sdp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:textColor="@color/blackColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="6"
        android:layout_weight="1.5"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Obtain Marks :"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/blackColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/_16sdp"
            android:text="15"
            android:textColor="@color/blackColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/_16sdp"
            android:text="Your Marks :"
            android:textColor="@color/blackColor"/>

        <TextView
            android:id="@+id/your_marks_horkot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/_16sdp"
            android:text="00"
            android:textColor="@color/blackColor"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/multiplechoicetest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AFA7A7"
            android:textColor="#ffffff"
            android:textSize="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:text="Multiple Choice Test: "/>
        <TextSwitcher
            android:id="@+id/multipleQuestionSwitcer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/whiteColor"
            android:padding="@dimen/_5sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="5"
        android:layout_weight="8"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"

            >

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">


                <RadioButton
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="এক যবর , এক যের , এক পেশ কে ।"
                    android:padding="@dimen/_10sdp"
                    android:checked="false"/>

                <RadioButton
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text=" ৩ টি।"/>
                <RadioButton

                    android:id="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text=" তারাতারি "/>


                <RadioButton
                    android:id="@+id/option4"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="দুই যবর, দুই যের , দুই পেশ কে "/>
                <RadioButton
                    android:id="@+id/option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="নুন আছে "
                    android:padding="@dimen/_10sdp"
                    />


                <RadioButton

                    android:id="@+id/option6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="এক যের"/>
                <RadioButton
                    android:id="@+id/option7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="দুই পেশ"/>

                <RadioButton
                    android:id="@+id/option8"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(ﹹ)"/>
                <RadioButton
                    android:id="@+id/option9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="(ﹷ)"/>

                <RadioButton
                    android:id="@+id/option10"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(ﹻ)"/>
            </RadioGroup>
        </ScrollView>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="MCQ Answer here.."
            android:textSize="@dimen/_25sdp"
            android:gravity="center"
            android:textColor="@color/blackColor"
            android:id="@+id/selectedItemtextView"/>
    </LinearLayout>






    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:visibility="gone"
        android:id="@+id/multipleAnsTS"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_weight="9"
        android:weightSum="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oralexam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/defoultColor"
            android:textColor="@color/blackColor"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_18sdp"
            android:gravity="center_horizontal"
            android:text="Oral Examination Test: "/>

        <TextView
            android:id="@+id/textSwitcherOralQuestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/blackColor"
            android:text="নিচের হরফ গুলির নাম বলেন ।"
            android:textSize="@dimen/_18sdp"
            android:background="@color/whiteColor"
            android:padding="@dimen/_5sdp"
            />
        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/testSwitcherPronunciation"/>
        <TextSwitcher
            android:id="@+id/textSwitcherOralQuestionTS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/whiteColor"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:background="@color/blackColor"
        android:layout_marginTop="@dimen/_10sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userVoice"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/book11"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/examMicBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/ic_mic_none_black_24dp" />
        <ImageButton
            android:id="@+id/examNextBttn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_80sdp"
            android:background="@drawable/next"
            />
    </LinearLayout>


</LinearLayout>