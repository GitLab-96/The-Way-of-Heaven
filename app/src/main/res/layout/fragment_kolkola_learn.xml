<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:background="@color/defoultColor"
    tools:context=".Learn.KolkolaLearn">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কলকলা হরফ ৫ টি। "
            android:textColor="@color/blackColor"
            android:textSize="@dimen/_25sdp"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ق - ط - ب - ج - د "
            android:gravity="center"
            android:textSize="@dimen/_35sdp"

            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/blackColor"
            android:layout_marginTop="@dimen/_10sdp"
            android:text=" এই পাঁচ হরফে যজম হইলে কলকলা করিয়া পরিতে হয়।"/>

    </LinearLayout>


    <TextSwitcher
        android:id="@+id/kolkolatextSwitherTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/bounarydesign"
        android:layout_weight="3"
        android:scaleX=".8"
        android:scaleY=".8" />

    <TextSwitcher
        android:id="@+id/textSwitcherkoloklaPronunciation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/whiteColor"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_25sdp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:weightSum="3"
        android:layout_weight="4"
        android:orientation="horizontal">

        <TextSwitcher
            android:id="@+id/kolkolatextSwitherLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bounarydesign"
            android:layout_weight="1"
            android:scaleX=".9"
            android:scaleY=".9">
        </TextSwitcher>

        <TextSwitcher
            android:id="@+id/kolkolatextSwitherMiddle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bounarydesign"
            android:scaleX=".9"
            android:scaleY=".9">

        </TextSwitcher>

        <TextSwitcher
            android:id="@+id/kolkolatextSwitherRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bounarydesign"
            android:layout_weight="1"
            android:scaleX=".9"
            android:scaleY=".9">
        </TextSwitcher>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_weight="8"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/blackColor"
            android:hint="Please Insert your Voice"
            android:id="@+id/userVoiceText"
            android:gravity="center_horizontal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="4"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:background="@color/whiteColor"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/outSeekBar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="3"
            android:weightSum="3"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_skip_previous_black_24dp"
                android:id="@+id/kolkolapreviousBtn"/>



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/kolkolaRepeatBtn"

                android:background="@drawable/ic_repeat_one_black_24dp"/>



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_skip_next_black_24dp"
                android:id="@+id/kolkolaNextBtn"/>



        </LinearLayout>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:background="@color/whiteColor"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:id="@+id/InSeekBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="1.5"
        android:padding="@dimen/_5sdp"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/micBtnkolkolalearn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/ic_mic_none_black_24dp" />

        <ImageButton
            android:id="@+id/compareBtnkolkolalearn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_25sdp"
            android:background="@drawable/ic_compare_arrows_black_24dp" />
    </LinearLayout>


</LinearLayout>