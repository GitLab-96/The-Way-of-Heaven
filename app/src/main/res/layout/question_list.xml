<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/questionLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Question : "/>

        <TextView
            android:id="@+id/userQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="User Question"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/typeAnswerET"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/bounarydesign"
                android:layout_margin="10dp"
                android:hint="উত্তর করতে এখানে লিখুন"/>

            <ImageView
                android:id="@+id/sendAnswernBttn"
                android:layout_width="80dp"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_height="60dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>