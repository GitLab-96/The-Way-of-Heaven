<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#DEE0E4"
    tools:context=".Learn.HorofLearn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">



            <ImageSwitcher
                android:id="@+id/imageSwither"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bounarydesign"
                android:scaleX=".8"
                android:scaleY=".8"/>


        </LinearLayout>

        <TextSwitcher
            android:id="@+id/textSwitcherhorofPronunciation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#C2BBBB"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:textSize="30dp" />

        <TextSwitcher
            android:id="@+id/textSwitcherMakhraz"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#C2BBBB"
            android:layout_marginBottom="2dp"
            android:padding="5dp"
            android:textSize="30dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#9FD589"
            android:layout_weight="8"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:hint="User Voice"
            android:id="@+id/userVoiceText"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <ImageSwitcher
            android:id="@+id/juktoImageSwither"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/bounarydesign"
            android:scaleX=".8"
            android:scaleY=".8"/>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_margin="5dp"
        android:layout_height="10dp"
        android:id="@+id/outSeekBar"/>
    <View
        android:layout_width="match_parent"
        android:background="#052DF5"
        android:layout_margin="5dp"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:padding="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:id="@+id/previousBtn"/>





        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/playBtn"
            android:layout_margin="10dp"
            android:background="@drawable/ic_repeat_one_black_24dp"/>



        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:id="@+id/nextBtn"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/micBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_mic_none_black_24dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/compareBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/ic_compare_arrows_black_24dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>