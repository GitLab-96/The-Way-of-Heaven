<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Learn.KolkolahActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="কলকলা"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="30sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="কলকলা হরফ ৫ টি। "
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ق - ط - ب - ج - د "
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text=" এই পাঁচ হরফে যজম হইলে কলকলা করিয়া পরিতে হয়।"/>

</LinearLayout>


    <ImageSwitcher
        android:id="@+id/kolkolaimageSwitherTop"
        android:layout_width="450dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="#000"
        android:layout_weight="4"
        android:scaleX=".8"
        android:scaleY=".8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="3"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageSwitcher
            android:id="@+id/kolkolaimageSwitherLeft"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>

        <ImageSwitcher
            android:id="@+id/kolkolaimageSwitherMiddle"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>

        <ImageSwitcher
            android:id="@+id/kolkolaimageSwitherRight"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="4"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:layout_height="0dp"/>
        <View
            android:layout_width="match_parent"
            android:background="#052DF5"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="3"
            android:weightSum="3"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_skip_previous_black_24dp"
                android:id="@+id/kolkolapreviousBtn"/>



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/kolkolaRepeatBtn"

                android:background="@drawable/ic_repeat_one_black_24dp"/>



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_skip_next_black_24dp"
                android:id="@+id/kolkolaNextBtn"/>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>