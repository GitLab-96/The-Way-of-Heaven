<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/defoultColor"
    tools:context=".Learn.HorkotLearn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="* এক যবর(ﹷ),এক যের (ﹻ), এক পেশ (ﹹ) কে হরকত বলে।"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="*  হরকতের উচ্চারণ তাড়াতাড়ি করিয়া পরিতে হয়।"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageSwitcher
                android:id="@+id/topImageSwitcher"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="#000"
                android:scaleX=".8"
                android:scaleY=".8"/>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TextSwitcher
            android:id="@+id/jobor_spacificationTS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:padding="5dp"
            />
        <TextSwitcher
            android:id="@+id/jer_spacificationTS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:padding="5dp"
            />
        <TextSwitcher
            android:id="@+id/pesh_spacificationTS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:padding="5dp"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="3"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageSwitcher
            android:id="@+id/leftImageSwitcher"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>

        <ImageSwitcher
            android:id="@+id/midleImageSwitcher"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>

        <ImageSwitcher
            android:id="@+id/rightImageSwitcher"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="4"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_margin="5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/outSeekBar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:weightSum="3"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_skip_previous_black_24dp"
                android:id="@+id/previousBtn"/>



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/replayBtn"
                android:layout_weight="1"
                android:background="@drawable/ic_repeat_one_black_24dp"/>



            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_skip_next_black_24dp"
                android:id="@+id/tomijnextBtn"/>



        </LinearLayout>



    </LinearLayout>


</LinearLayout>