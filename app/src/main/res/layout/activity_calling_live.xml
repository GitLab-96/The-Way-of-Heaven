<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defoultColor"
    tools:context=".Question.CallingLive">



<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_above="@id/positionNumber"
    android:layout_below="@id/timeLayout"
    android:src="@drawable/book11"
    android:layout_marginTop="5dp"
    android:id="@+id/scholersImage"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="40sp"
        android:hint="Live Title"
        android:id="@+id/liveTitle"/>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/liveTitle"
    android:gravity="center"
    android:textSize="25sp"
    android:textColor="#000000"
    android:hint="Scholers Name"
    android:id="@+id/scholersName"/>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scholersName"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bounarydesign"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="   Live Start at :"
            android:id="@+id/timeText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="12:00"
                android:textColor="#000000"
                android:id="@+id/startTime"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:text="To"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="2:00"
                android:id="@+id/endingTime"/>
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_above="@id/joinButtn"
        android:hint="position_number"
        android:id="@+id/positionNumber"/>

    <Button
        android:id="@+id/joinButtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Live Session"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:background="@drawable/bounarydesign"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>