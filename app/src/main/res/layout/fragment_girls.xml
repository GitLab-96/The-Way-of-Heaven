<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#7EC2C7D8"
    android:orientation="vertical"
    android:weightSum="15"
    tools:context=".Salah.GirlsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="দুই রাকাত নামাজে ৬০ টি মাসালাহ"
        android:layout_margin="10dp"
        android:textColor="@color/blackColor"
        android:background="@color/whiteColor"
        android:textSize="25sp"
        android:padding="@dimen/_5sdp"
        android:gravity="center"/>

    <TextSwitcher
    android:id="@+id/masalahTypeTSGirls"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:layout_margin="10dp"
    android:textColor="@color/blackColor"
    android:textSize="20sp"
        android:background="@drawable/bounarydesign"
    android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="8"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="0dp">




            <ImageSwitcher
                android:id="@+id/imageSwitcherGirls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/hatuthanboys" />

    </androidx.cardview.widget.CardView>


    <TextSwitcher
        android:id="@+id/textSwitcherGirls"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bounarydesign"
        android:layout_height="0dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@drawable/bounarydesign"
            android:id="@+id/preBtnGirls"
            android:src="@drawable/ic_navigate_before_black_24dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bounarydesign"
                android:id="@+id/playBtnsalahGirls"
                android:visibility="invisible"
                android:src="@drawable/ic_play_circle_outline_black_24dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/pauseBtnsalahGirlas"
                android:background="@drawable/bounarydesign"
                android:src="@drawable/ic_pause_circle_outline_black_24dp"/>



        </RelativeLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/bounarydesign"
            android:id="@+id/nextBtnGirls"
            android:src="@drawable/ic_navigate_next_black_24dp"/>


    </LinearLayout>



</LinearLayout>