<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Learn.PurFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="() এর উপর যবর অথবা পেশ থাকিলে ঐ () কে মোটা করিয়া পড়িতে হয়।"
            android:drawableLeft="@drawable/ic_subdirectory_arrow_right_black_24dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="() সাকিন এর ডানে যবর অথবা পেশ থাকিলে ঐ () কে মোটা করিয়া পড়িতে হয়।"
            android:drawableLeft="@drawable/ic_subdirectory_arrow_right_black_24dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="() সাকিন এর বামে মোটা হরফ থাকিলে ঐ () কে মোটা করিয়া পড়িতে হয়।"
            android:drawableLeft="@drawable/ic_subdirectory_arrow_right_black_24dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#999292"
        android:layout_marginTop="5dp"/>
    <ImageSwitcher
        android:id="@+id/roMotaimageSwitherTop"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#000"
        android:scaleX=".8"
        android:scaleY=".8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageSwitcher
            android:id="@+id/roMotaimageSwitherLeft"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>

        <ImageSwitcher
            android:id="@+id/roMotaimageSwitherMiddle"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>

        <ImageSwitcher
            android:id="@+id/roMotaimageSwitherRight"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#000"
            android:layout_weight="1"
            android:scaleX=".8"
            android:scaleY=".8">
        </ImageSwitcher>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#052DF5"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:id="@+id/roMotaPreviousBtn"/>



        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/roMotaRepeatBtn"
            android:layout_margin="10dp"
            android:background="@drawable/ic_repeat_one_black_24dp"/>



        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:id="@+id/roMotaNextBtn"/>



    </LinearLayout>

</LinearLayout>