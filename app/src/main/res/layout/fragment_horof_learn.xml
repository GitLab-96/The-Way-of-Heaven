<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="19"
    android:background="@color/defoultColor"
    tools:context=".Learn.HorofLearn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="8"
        android:orientation="vertical">


        <TextSwitcher
            android:id="@+id/textSwither"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:textAlignment="center"
            android:background="@drawable/bounarydesign"
            android:scaleX=".9"
            android:scaleY=".9" />

        <TextSwitcher
            android:id="@+id/textSwitcherhorofPronunciation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/whiteColor"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_30sdp" />

        <TextSwitcher
            android:id="@+id/textSwitcherMakhraz"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/whiteColor"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_30sdp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_weight="8"
            android:padding="@dimen/_5sdp"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/blackColor"
            android:hint="Please Insert your Voice"
            android:id="@+id/userVoiceText"
            android:gravity="center_horizontal" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextSwitcher
            android:id="@+id/juktoTextSwitherleft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bounarydesign"
            android:scaleX=".9"
            android:scaleY=".9"/>
        <TextSwitcher
            android:id="@+id/juktoTextSwithermiddle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bounarydesign"
            android:scaleX=".9"
            android:scaleY=".9"/>
        <TextSwitcher
            android:id="@+id/juktoTextSwitherright"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bounarydesign"
            android:scaleX=".9"
            android:scaleY=".9"/>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:background="@color/whiteColor"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:id="@+id/outSeekBar"
        android:progressBackgroundTint="@color/blackColor"
        android:progressTint="@color/appsColor"
        android:thumbTint="@color/blackColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_margin="@dimen/_10sdp"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:id="@+id/previousBtn"/>





        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/playBtn"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/ic_repeat_one_black_24dp"/>



        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:id="@+id/nextBtn"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/InputSeekBar"
        android:layout_width="match_parent"
        android:layout_weight=".5"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_5sdp"
        android:progressBackgroundTint="@color/blackColor"
        android:progressTint="@color/appsColor"
        android:thumbTint="@color/blackColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/micBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_mic_none_black_24dp" />

        <ImageButton
            android:id="@+id/compareBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/ic_compare_arrows_black_24dp" />
    </LinearLayout>

</LinearLayout>