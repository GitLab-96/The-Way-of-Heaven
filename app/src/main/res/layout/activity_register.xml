<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book11"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="match_parent">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/registerEmail"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:hint="Email........."
                android:textSize="@dimen/_20sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/bounarydesign"
                android:padding="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/registerEmail"
                android:id="@+id/registerPassword"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:hint="Password........."
                android:textSize="@dimen/_20sdp"
                android:inputType="textPassword"
                android:background="@drawable/bounarydesign"
                android:padding="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>





            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_buttn"
                android:layout_below="@id/registerPassword"
                android:padding="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Create an Account"
                android:textAllCaps="false"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/blackColor"
                android:background="@drawable/bounarydesign"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_buttn"
                android:id="@+id/alreadyAccountLink"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Already Have an Account ?"
                android:textAlignment="center"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center" />


        </RelativeLayout>




    </ScrollView>

</RelativeLayout>