<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/defoultColor"
    tools:context=".Learn.Horof">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="তমীয হরফ"
        android:padding="5dp"
        android:textSize="30sp"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="#000000"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tomij_horof_main_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="4dp"
            android:background="#ECE6EE"
            app:tabIndicatorColor="@color/appsColor"
            app:tabTextColor="@color/blackColor"
            app:tabSelectedTextColor="@color/appsColor"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tomijhorofViewPager"/>

</LinearLayout>