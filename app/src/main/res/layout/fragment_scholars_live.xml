<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/bounarydesign"
    tools:context=".Question.Scholer.ScholarsLiveFragment">

    <TextView
        android:id="@+id/scholers_live_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Live Session"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#ABF5AE"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/scholers_live_session"
        android:layout_height="match_parent"
        android:id="@+id/scholersLiveRecylerView"/>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/addkolkolah"
       android:layout_margin="10dp"
       android:id="@+id/add_live_session"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"/>



    </RelativeLayout>
